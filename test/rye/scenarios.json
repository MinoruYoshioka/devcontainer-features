{
    "use_uv_false": {
        "image": "mcr.microsoft.com/devcontainers/base:debian",
        "features": {
            "rye": {
                "uv": false
            }
        }
    },
    "use_uv_true": {
        "image": "mcr.microsoft.com/devcontainers/base:debian",
        "features": {
            "rye": {
                "uv": true
            }
        }
    },
    "python_feature": {
        "image": "mcr.microsoft.com/devcontainers/base:debian",
        "features": {
            "ghcr.io/devcontainers/features/python:1": {
                "installTools": false
            },
            "rye": {}
        }
    },
    "python_base": {
        "image": "mcr.microsoft.com/devcontainers/python",
        "features": {
            "rye": {}
        }
    },
    "rye_version_post_attach": {
        "image": "mcr.microsoft.com/devcontainers/base:debian",
        "postAttachCommand": "rye --version",
        "remoteEnv": {
            "PATH": "/usr/local/share/rye/shims:${containerEnv:PATH}"
        },
        "features": {
            "rye": {}
        }
    },
    "rye_version_post_start": {
        "image": "mcr.microsoft.com/devcontainers/base:debian",
        "postStartCommand": "rye --version",
        "remoteEnv": {
            "PATH": "/usr/local/share/rye/shims:${containerEnv:PATH}"
        },
        "features": {
            "rye": {}
        }
    }
}