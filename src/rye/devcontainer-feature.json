{
    "id": "rye",
    "version": "1.1.2",
    "name": "Rye",
    "description": "A Hassle-Free Python Experience",
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ],
    "options": {
        "uv": {
            "type": "boolean",
            "default": true,
            "description": "uv enabled"
        }
    },
    "containerEnv": {
        "RYE_INSTALL_OPTION": "--yes",
        "RYE_HOME": "/usr/local/share/rye"
    },
    "postStartCommand": "echo '. /usr/local/share/rye/env' >> ~/.profile"
}
