{
    "id": "rye",
    "version": "1.1.3",
    "name": "Rye",
    "description": "A Hassle-Free Python Experience",
    "dependsOn": {
        "ghcr.io/devcontainers-contrib/features/curl-apt-get:1": {}
    },
    "options": {
        "uv": {
            "type": "boolean",
            "default": true,
            "description": "uv enabled"
        }
    },
    "containerEnv": {
        "RYE_INSTALL_OPTION": "--yes",
        "RYE_HOME": "/usr/local/lib/rye",
        "PATH": "/usr/local/lib/rye/shims:${PATH}"
    }
}
