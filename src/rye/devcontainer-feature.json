{
    "id": "rye",
    "version": "1.0.4",
    "name": "Rye",
    "description": "A Hassle-Free Python Experience",
    "dependsOn": {
        "ghcr.io/devcontainers/features/common-utils": {}
    },
    "containerEnv": {
        "RYE_INSTALL_OPTION": "--yes",
        "RYE_HOME": "/usr/local/share/rye"
    },
    "postCreateCommand": "echo '. /usr/local/share/rye/env' >> ~/.bashrc"
}
